# OMNE Open Node Environment Configuration
# This file contains environment variables needed to configure an open node
# to join an existing OMNE network as a validator

# ================================================================
# REQUIRED CONFIGURATION - You must set these values
# ================================================================

# Your OMNE wallet address that will receive validator rewards
# This address must have sufficient OMC tokens for staking
STEWARD_ADDRESS=0z1234567890abcdef1234567890abcdef12345678

# Bootstrap nodes for connecting to the existing network
# Format: comma-separated list of node URLs
# Example: http://node1.omne.io:3400,http://node2.omne.io:3400,http://node3.omne.io:3400
OMNE_BOOTSTRAP_NODES=http://bootstrap1.omne.io:3400,http://bootstrap2.omne.io:3400

# ================================================================
# NETWORK CONFIGURATION
# ================================================================

# Port for this node to listen on
PORT_NUMBER=3400

# Host interface to bind to (0.0.0.0 for all interfaces)
OMNE_NETWORK_HOST=0.0.0.0

# Maximum number of peer connections
OMNE_MAX_CONNECTIONS=50

# Network connection timeout in seconds
OMNE_NETWORK_TIMEOUT=30

# Enable peer discovery
OMNE_DISCOVERY_ENABLED=true

# ================================================================
# NODE CONFIGURATION
# ================================================================

# Node role (validator for participating in consensus)
NODE_ROLE=validator

# Unique identifier for this node (auto-generated if not set)
# NODE_ID=

# ================================================================
# BLOCKCHAIN CONFIGURATION
# ================================================================

# Consensus timeout in seconds
OMNE_CONSENSUS_TIMEOUT=300

# Block time in seconds (540 = 9 minutes)
OMNE_BLOCK_TIME=540

# RANDAO commit duration in seconds
OMNE_RANDAO_COMMIT_DURATION=60

# RANDAO reveal duration in seconds
OMNE_RANDAO_REVEAL_DURATION=60

# Proof of Effort task difficulty
OMNE_POEF_DIFFICULTY=4

# ================================================================
# STORAGE CONFIGURATION
# ================================================================

# Storage backend type (file, memory, or database)
OMNE_STORAGE_BACKEND=file

# Data directory for file-based storage
OMNE_DATA_DIRECTORY=./data

# MongoDB configuration (if using database storage)
OMNE_USE_MONGODB=false
# OMNE_MONGODB_URI=mongodb://localhost:27017/omne

# ================================================================
# SECURITY CONFIGURATION
# ================================================================

# Enable SSL/TLS
OMNE_ENABLE_SSL=false

# SSL certificate and key paths (if SSL enabled)
# OMNE_SSL_CERT_PATH=/path/to/cert.pem
# OMNE_SSL_KEY_PATH=/path/to/key.pem

# ================================================================
# LOGGING CONFIGURATION
# ================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
OMNE_LOG_LEVEL=INFO

# Log file path (leave empty for console only)
# OMNE_LOG_FILE=./logs/omne_node.log

# Maximum log file size in bytes
OMNE_LOG_MAX_SIZE=10485760

# Number of backup log files to keep
OMNE_LOG_BACKUP_COUNT=5

# ================================================================
# DEVELOPMENT CONFIGURATION
# ================================================================

# Enable debug mode (false for production)
OMNE_DEBUG_MODE=false

# Enable test mode
OMNE_TEST_MODE=false

# Development environment
# NODE_ENV=production

# ================================================================
# FEE CONFIGURATION
# ================================================================

# Base transaction fee
OMNE_BASE_FEE=0.0000000000000001

# Fee multiplier for dynamic fee calculation
OMNE_FEE_MULTIPLIER=0.00000000000001

# ================================================================
# PERFORMANCE TUNING
# ================================================================

# Maximum block size in bytes
OMNE_MAX_BLOCK_SIZE=1048576

# Maximum transaction pool size
OMNE_MAX_TRANSACTION_POOL_SIZE=10000

# Transaction timeout in seconds
OMNE_TRANSACTION_TIMEOUT=300

# ================================================================
# EXAMPLE PRODUCTION CONFIGURATION
# ================================================================

# For a production validator node connecting to mainnet:
# STEWARD_ADDRESS=0zYourActualWalletAddressHere1234567890abcdef
# OMNE_BOOTSTRAP_NODES=http://mainnet1.omne.io:3400,http://mainnet2.omne.io:3400,http://mainnet3.omne.io:3400
# PORT_NUMBER=3400
# NODE_ROLE=validator
# OMNE_STORAGE_BACKEND=file
# OMNE_DATA_DIRECTORY=/var/lib/omne/data
# OMNE_LOG_LEVEL=INFO
# OMNE_LOG_FILE=/var/log/omne/node.log
# OMNE_ENABLE_SSL=true
# OMNE_SSL_CERT_PATH=/etc/ssl/certs/omne.crt
# OMNE_SSL_KEY_PATH=/etc/ssl/private/omne.key
